{
	"name": "@snickbit/out",
	"version": "2.0.37",
	"description": "Cross-platform pretty output for your terminal or browser console.",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify --dts",
		"build:types": "tsc --emitDeclarationOnly --declarationDir dist",
		"clean": "shx rm -rf ./dist",
		"dev": "tsup",
		"dev:types": "tsc --emitDeclarationOnly --declarationMap --declarationDir .types",
		"docs": "typedoc",
		"start": "node ./examples/node.js",
		"test": "jest",
		"test:ci": "jest --ci --onlyChanged",
		"watch": "concurrently -k -c magenta,cyan pnpm:watch:*",
		"watch:dev": "pnpm run dev --watch",
		"watch:types": "pnpm run dev:types --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/ansi": "~0.0.10",
		"@snickbit/cycle": "~1.0.2",
		"@snickbit/utilities": "~3.4.3",
		"ansi-styles-template": "~1.0.0",
		"browser-or-node": "~2.0.0",
		"node-inspect-extracted": "~1.1.0",
		"picomatch-browser": "~2.2.6"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.3.2",
		"@snickbit/semantic-release": "^1.5.3",
		"@types/jest": "28.1.8",
		"@types/node": "18.6.4",
		"concurrently": "7.3.0",
		"eslint": "8.23.0",
		"jest": "28.1.3",
		"semantic-release": "^19.0.5",
		"shx": "0.3.4",
		"ts-jest": "28.0.8",
		"tsup": "6.2.3",
		"typedoc": "0.23.11",
		"typedoc-plugin-markdown": "3.13.5",
		"typescript": "4.8.2"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
